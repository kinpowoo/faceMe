<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="8dp"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_single_status_back"
            android:src="@drawable/back"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="动态"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sdv_single_status_userPortrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            fresco:roundAsCircle="true" />
        <TextView
            android:id="@+id/tv_single_status_username"
            android:text="xiaoer"
            android:layout_toRightOf="@+id/sdv_single_status_userPortrait"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/iv_single_status_option"
            android:layout_alignParentRight="true"
            android:src="@drawable/option"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
        <View
            android:background="@color/register_activity_bg"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:background="@color/White"
        android:id="@+id/iv_single_status_photo"
        android:layout_width="380dp"
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        fresco:progressBarImage="@drawable/loading"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="5000"
        fresco:failureImage="@drawable/failure"
        fresco:failureImageScaleType="centerInside"
        fresco:actualImageScaleType="focusCrop"
        android:layout_height="400dp"
        />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_single_status_textBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_single_status_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/tag"/>

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/tag_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/test_color_a"
                        android:padding="5dp"
                        android:background="@drawable/custom_type_shape"/>

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/tag_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/test_color_a"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/custom_type_shape"/>

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/tag_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/test_color_a"
                        android:padding="5dp"
                        android:background="@drawable/custom_type_shape"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/SlateGray"/>

                <TextView
                    android:id="@+id/tv_single_status_commentNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/SlateGray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/SlateGray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iv_single_status_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:id="@+id/iv_single_status_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/message" />

                    <ImageView
                        android:id="@+id/iv_single_status_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/shape" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White">
                    <TextView
                        android:id="@+id/tv_single_status_postTime"
                        android:background="@color/White"
                        android:paddingLeft="20dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_single_status_favoriteNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/White"
                        android:drawableLeft="@mipmap/good"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="1dp"
                        android:textColor="@color/GoldenRod" />
                </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>