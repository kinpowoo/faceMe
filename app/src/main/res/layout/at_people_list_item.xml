<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sdv_at_people_item_portrait"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/tv_at_people_item_username"
        android:layout_toRightOf="@+id/sdv_at_people_item_portrait"
        android:layout_alignTop="@+id/sdv_at_people_item_portrait"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_at_people_item_nickname"
        android:layout_alignLeft="@+id/tv_at_people_item_username"
        android:layout_below="@+id/tv_at_people_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="2dp"
        android:layout_below="@+id/sdv_at_people_item_portrait"
        android:layout_marginLeft="80dp"
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>