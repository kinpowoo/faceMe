<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/back"
            android:id="@+id/iv_settings_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_centerInParent="true"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <View
        android:background="@color/WhiteSmoke"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />
    <View
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <TextView
        android:id="@+id/tv_settings_editProfile"
        android:text="修改个人主页"
        android:drawableLeft="@drawable/person"
        android:drawableRight="@drawable/enter"
        style="@style/SettingItem" />

    <View
        android:layout_marginLeft="50dp"
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
    <TextView
        android:id="@+id/tv_settings_changePass"
        android:text="修改密码"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/enter"
        style="@style/SettingItem" />
    <View
        android:layout_marginLeft="50dp"
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <TextView
        android:text="Misc"
        android:textSize="20dp"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/tv_settings_clearCache"
        android:text="清理缓存"
        android:drawableLeft="@drawable/cache"
        android:drawableRight="@drawable/enter"
        style="@style/SettingItem" />
    <View
        android:layout_marginLeft="50dp"
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
    <TextView
        android:id="@+id/tv_settings_feedback"
        android:text="反馈"
        android:drawableLeft="@drawable/feedback"
        android:drawableRight="@drawable/enter"
        style="@style/SettingItem" />
    <View
        android:layout_marginLeft="50dp"
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <TextView
        android:id="@+id/tv_settings_about"
        android:text="关于"
        android:drawableLeft="@drawable/about"
        android:drawableRight="@drawable/enter"
        style="@style/SettingItem" />
    <View
        android:layout_marginLeft="50dp"
        android:background="@color/register_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
    <TextView
        android:id="@+id/tv_settings_logOut"
        android:background="@drawable/log_out_button"
        android:gravity="center"
        android:text="注销"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>