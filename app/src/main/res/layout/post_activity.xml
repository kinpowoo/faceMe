<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分享"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_uploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="上传"
            android:layout_marginRight="10dp"
            android:textColor="@color/test_color_a"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/surfaceview"
        android:layout_width="80dp"
        android:padding="5dp"
        android:layout_height="80dp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/White"
        android:gravity="start"
        android:hint="说点什么吧..."
        android:padding="5dp"
        android:textColor="@color/black" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:text="添加标签:"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="17dp" />

                <CheckedTextView
                    android:id="@+id/custom_type_one"
                    style="@style/custom_Tag"
                    android:visibility="invisible"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:layout_marginBottom="5dp"
                    android:checked="true"
                    />

                <CheckedTextView
                    android:id="@+id/custom_type_two"
                    style="@style/custom_Tag"
                    android:visibility="invisible"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:layout_marginBottom="5dp"
                    android:checked="true"
                    />

            </RelativeLayout>

            <GridLayout
                android:id="@+id/gl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                >

                <CheckedTextView
                    android:id="@+id/tv_FaceMe"
                    style="@style/custom_Tag"
                    android:text="自拍"
                    />

                <CheckedTextView
                    android:id="@+id/tv_baby"
                    style="@style/custom_Tag"
                    android:text="宝贝"
                   />

                <CheckedTextView
                    android:id="@+id/tv_nearby"
                    style="@style/custom_Tag"
                    android:text="风景"
                    />

                <CheckedTextView
                    android:id="@+id/tv_start"
                    style="@style/custom_Tag"
                    android:text="明星"
                    />

                <CheckedTextView
                    android:id="@+id/tv_boy"
                    style="@style/custom_Tag"
                    android:text="帅哥"
                    />

                <CheckedTextView
                    android:id="@+id/tv_belle"
                    style="@style/custom_Tag"
                    android:text="美女"
                   />

                <CheckedTextView
                    android:id="@+id/tv_food"
                    style="@style/custom_Tag"
                    android:text="美食"
                    />

                <CheckedTextView
                    android:id="@+id/tv_travel"
                    style="@style/custom_Tag"
                    android:text="旅行"
                    />

                <ImageView
                    android:id="@+id/tv_add"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_type_shape"
                    android:paddingBottom="2dp"
                    android:paddingTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:src="@mipmap/add" />


            </GridLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/WhiteSmoke"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_post_activity_share"
                android:clickable="true"
                android:onClick="share"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:drawableRight="@mipmap/share_blue"
                 />




  <!--  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/who_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/share_shape"
            android:padding="3dp"
            android:src="@mipmap/a_1" />

        <ImageView
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/share_shape"
            android:padding="3dp"
            android:src="@mipmap/face_1" />
-->
        <ImageView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/tv_post_activity_share"
            android:padding="3dp"
            android:src="@mipmap/location" />

        <TextView
            android:id="@+id/location_show"
            android:layout_toRightOf="@+id/location"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/custom_type_shape"
            android:padding="2dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/word_number"
            android:layout_width="40dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="18dp" />
    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>