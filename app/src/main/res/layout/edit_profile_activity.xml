<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_edit_profile_cancel"
            android:padding="7dp"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:padding="7dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="编辑主页"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_edit_profile_commit"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textSize="22dp"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:background="@color/Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/WhiteSmoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            fresco:roundAsCircle="true"
            android:id="@+id/sdv_edit_profile_userPortrait"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <TextView
            android:id="@+id/tv_edit_profile_changePortrait"
            android:padding="10dp"
            android:textSize="22dp"
            android:textColor="@color/CadetBlue"
            android:text="change profile photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
      <LinearLayout
          android:layout_marginTop="1dp"
          android:background="@color/White"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:src="@drawable/username"
              android:layout_margin="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/cet_edit_profile_username"
              android:layout_gravity="center_vertical"
              android:background="@null"
              android:padding="8dp"
              android:textSize="21dp"
              android:layout_marginTop="4dp"
              android:layout_marginLeft="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
      </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/White"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/nickname"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.jinhanyu.jack.faceme.ClearEditText
                    android:id="@+id/cet_edit_profile_nickname"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="8dp"
                    android:textSize="21dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:background="@color/WhiteSmoke"
                android:paddingTop="25dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="隐私设置"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@color/White"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/email"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_edit_profile_email"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="8dp"
                    android:textSize="21dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@color/White"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/phone"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_edit_profile_phone"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="8dp"
                    android:textSize="21dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/White"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/gender_male"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_edit_profile_gender"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="8dp"
                    android:layout_marginTop="4dp"
                    android:textSize="21dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>