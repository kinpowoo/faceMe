<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ll_mainActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <RadioGroup
        android:background="@color/WhiteSmoke"
        android:id="@+id/rg_mainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginBottom="-6dp"
        android:orientation="horizontal">

        <RadioButton
            android:checked="true"
            android:id="@+id/rb_mainActivity_mainFragment"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/home_button" />

        <RadioButton
            android:id="@+id/rb_mainActivity_flowFragment"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/flow_button" />

        <Button
            android:id="@+id/rb_mainActivity_postFragment"
            style="@style/RadioButtonStyle"
            android:background="@null"
            android:drawableTop="@drawable/camera_light" />

        <RadioButton
            android:id="@+id/rb_mainActivity_favoriteFragment"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/favorite_button" />

        <RadioButton
            android:id="@+id/rb_mainActivity_userFragment"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/user_button" />
    </RadioGroup>

    <ImageView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>